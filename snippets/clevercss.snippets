	BASE_FONT             = 14
	PX                    = 1em / $BASE_FONT
	PAD                   = 20   * $PX
	DPI                   = 160  * $PX
	DPCM                  = $DPI / 2.54

	COLOR_PAGE_BG        = #FFFFFF
	COLOR_PAGE_TXT       = #202020
	FONT_BASE            = "Helvetica", sans-serif

	Z_DEVELOPER_TOOLS      = 110
	Z_LEGACY               = 102
	Z_OVERLAY              = 20
	Z_ABOUT                = 15
	Z_NAVIGATION           = 10
	Z_CONTROL              = 9
	Z_CONTENT              = 5
	Z_HIDDEN               = 1

	// ----------------------------------------------------------------------------
	//
	// UNITS
	//
	// ----------------------------------------------------------------------------


	@unit pem = 1em / $BASE_FONT
	@unit pad = 10pem

	// ----------------------------------------------------------------------------
	//
	// MACROS
	//
	// ----------------------------------------------------------------------------

	@macro expand
		position: absolute
		top:    0em
		bottom: 0em
		right:  0em
		left:   0em

	@macro font delta
		font-size: $delta * 100%
		line-height: $BASE_LINE_HEIGHT

	@macro triangle width, color
		width:  0
		height: 0
		border-style: solid
		border-width: 0 $width $width $width
		border-color: transparent transparent $color transparent

	@macro rounded radius
		display:       block
		margin-top:    0 - $radius
		margin-left:   0 - $radius
		border-radius: $radius
		width:         $radius * 2
		height:        $radius * 2
		background:    #FFFFFF00

	@macro icon width, height, image
		width:  $width  * 1pem
		height: $height * 1pem
		background-image: $image

	@macro cleared
		&:after:
			content: ""
			display: block
			height: 0em
			clear: both

	html, body:
		background-color: $COLOR_PAGE_BG

